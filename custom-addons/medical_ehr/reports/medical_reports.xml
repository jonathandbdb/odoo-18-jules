<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Report Action for Prescription -->
        <record id="action_report_medical_prescription" model="ir.actions.report">
            <field name="name">Prescription</field>
            <field name="model">medical.prescription</field>
            <field name="report_type">qweb-pdf</field>
            <!-- Fully qualified name: module_name.template_id -->
            <field name="report_name">medical_ehr.report_medical_prescription_document</field>
            <field name="report_file">medical_ehr.report_medical_prescription_document</field>
            <field name="print_report_name">'Prescription - %s' % (object.name)</field>
            <field name="binding_model_id" ref="model_medical_prescription"/>
            <field name="binding_type">report</field>
        </record>

