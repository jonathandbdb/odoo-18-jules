<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1"> <!-- noupdate="1" means this data is only loaded on module installation -->

        <!-- Default Allergy Types -->
        <record id="allergy_type_penicillin" model="medical.allergy.type">
            <field name="name">Penicillin</field>
            <field name="category">drug</field>
            <field name="description">Allergy to penicillin antibiotics.</field>
        </record>
        <record id="allergy_type_peanuts" model="medical.allergy.type">
            <field name="name">Peanuts</field>
            <field name="category">food</field>
            <field name="description">Allergy to peanuts.</field>
        </record>
        <record id="allergy_type_dust_mites" model="medical.allergy.type">
            <field name="name">Dust Mites</field>
            <field name="category">environmental</field>
            <field name="description">Allergy to dust mites.</field>
        </record>

        <!-- Default Condition Codes (Examples - use proper ICD-10 or SNOMED list in production) -->
        <record id="condition_code_hypertension" model="medical.condition.code">
            <field name="name">Essential (primary) hypertension</field>
            <field name="code">I10</field>
            <field name="system">ICD-10</field>
        </record>
        <record id="condition_code_diabetes_type2" model="medical.condition.code">
            <field name="name">Type 2 diabetes mellitus</field>
            <field name="code">E11</field>
            <field name="system">ICD-10</field>
        </record>
        <record id="condition_code_asthma" model="medical.condition.code">
            <field name="name">Asthma</field>
            <field name="code">J45</field> <!-- Basic asthma code, might need more specific ones -->
            <field name="system">ICD-10</field>
        </record>

        <!-- Default Medication Routes -->
        <record id="med_route_oral" model="medical.medication.route">
            <field name="name">Oral</field>
            <field name="code">PO</field>
        </record>
        <record id="med_route_iv" model="medical.medication.route">
            <field name="name">Intravenous</field>
            <field name="code">IV</field>
        </record>
        <record id="med_route_topical" model="medical.medication.route">
            <field name="name">Topical</field>
            <field name="code">TOP</field>
        </record>
        <record id="med_route_inhalation" model="medical.medication.route">
            <field name="name">Inhalation</field>
            <field name="code">INH</field>
        </record>

        <!-- Default Medication Forms -->
        <record id="med_form_tablet" model="medical.medication.form">
            <field name="name">Tablet</field>
        </record>
        <record id="med_form_capsule" model="medical.medication.form">
            <field name="name">Capsule</field>
        </record>
        <record id="med_form_syrup" model="medical.medication.form">
            <field name="name">Syrup</field>
        </record>
        <record id="med_form_inhaler" model="medical.medication.form">
            <field name="name">Inhaler</field>
        </record>
        <record id="med_form_cream" model="medical.medication.form">
            <field name="name">Cream</field>
        </record>

        <!-- Product examples for vaccines and medicaments (ensure product module is available) -->
        <!-- These would ideally be more comprehensive and managed by pharmacy/inventory -->
        <record id="product_vaccine_flu" model="product.template">
            <field name="name">Influenza Vaccine 20XX-20XY</field>
            <field name="type">consu</field> <!-- Consumable product type -->
            <field name="categ_id" ref="product.product_category_consumable"/>
            <field name="is_vaccine">True</field>
            <field name="list_price">0.0</field> <!-- Cost might be tracked, selling price might be for service -->
            <field name="standard_price">10.0</field>
        </record>
        <record id="product_med_amoxicillin_250" model="product.template">
            <field name="name">Amoxicillin 250mg Tablets</field>
            <field name="type">consu</field>
            <field name="categ_id" ref="product.product_category_consumable"/>
            <field name="is_medicament">True</field>
            <field name="list_price">5.0</field>
            <field name="standard_price">2.0</field>
        </record>
         <record id="product_med_paracetamol_500" model="product.template">
            <field name="name">Paracetamol 500mg Tablets</field>
            <field name="type">consu</field>
            <field name="categ_id" ref="product.product_category_consumable"/>
            <field name="is_medicament">True</field>
            <field name="list_price">3.0</field>
            <field name="standard_price">1.0</field>
        </record>

    </data>
</odoo>
