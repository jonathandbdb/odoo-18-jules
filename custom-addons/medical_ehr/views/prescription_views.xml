<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Medical Prescription Form View -->
        <record id="view_medical_prescription_form" model="ir.ui.view">
            <field name="name">medical.prescription.form</field>
            <field name="model">medical.prescription</field>
            <field name="arch" type="xml">
                <form string="Medical Prescription">
                    <header>
                        <button name="action_activate" string="Activate" type="object" class="oe_highlight" attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                        <button name="action_print_prescription" string="Print Prescription" type="object" class="oe_highlight" attrs="{'invisible': [('state', 'not in', ['active', 'dispensed'])]}"/>
                        <button name="action_cancel" string="Cancel" type="object" attrs="{'invisible': [('state', 'in', ['cancelled', 'expired'])]}"/>
                        <button name="action_set_to_draft" string="Set to Draft" type="object" attrs="{'invisible': [('state', '!=', 'cancelled')]}"/>
                        <!-- Add other state transition buttons here as needed -->
                        <field name="state" widget="statusbar" statusbar_visible="draft,active,dispensed,expired"/>
                    </header>
                    <sheet>
                         <div class="oe_button_box" name="button_box">
                             <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1><field name="name" readonly="1"/></h1>
                        </div>
                        <group>
                            <group>
                                <field name="patient_id" options="{'no_create_edit': True}"/>
                                <field name="doctor_id" options="{'no_create_edit': True}"/>
                                <field name="company_id" groups="base.group_multi_company"/>
                            </group>
                            <group>
                                <field name="prescription_date"/>
                                <field name="consultation_id" options="{'no_create_edit': True}"
                                       context="{'default_patient_id': patient_id, 'default_doctor_id': doctor_id}"
                                       domain="[('patient_id','=',patient_id),('doctor_id','=',doctor_id)]"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Medications">
                                <field name="prescription_line_ids">
                                    <tree string="Medications" editable="bottom">
                                        <field name="medication_id" domain="[('is_medicament','=',True)]" context="{'default_is_medicament':True}"/>
                                        <field name="dosage"/>
                                        <field name="form_id"/>
                                        <field name="route_id"/>
                                        <field name="frequency"/>
                                        <field name="duration"/>
                                        <field name="quantity"/>
                                        <field name="notes" optional="show"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Notes">
                                <field name="notes" placeholder="General notes for the pharmacist or patient..."/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Medical Prescription Tree View -->
        <record id="view_medical_prescription_tree" model="ir.ui.view">
            <field name="name">medical.prescription.tree</field>
            <field name="model">medical.prescription</field>
            <field name="arch" type="xml">
                <tree string="Medical Prescriptions" decoration-info="state=='draft'" decoration-success="state=='active' or state=='dispensed'" decoration-muted="state=='cancelled' or state=='expired' or active==False">
                    <field name="name"/>
                    <field name="prescription_date"/>
                    <field name="patient_id"/>
                    <field name="doctor_id"/>
                    <field name="consultation_id" optional="hide"/>
                    <field name="state"/>
                    <field name="company_id" groups="base.group_multi_company" optional="hide"/>
                    <field name="active" widget="boolean_toggle" invisible="1"/>
                </tree>
            </field>
        </record>

        <!-- Medical Prescription Search View -->
        <record id="view_medical_prescription_search" model="ir.ui.view">
            <field name="name">medical.prescription.search</field>
            <field name="model">medical.prescription</field>
            <field name="arch" type="xml">
                <search string="Search Prescriptions">
                    <field name="name"/>
                    <field name="patient_id"/>
                    <field name="doctor_id"/>
                    <field name="prescription_date"/>
                    <field name="state"/>
                    <field name="prescription_line_ids" string="Medication" filter_domain="[('prescription_line_ids.medication_id', 'ilike', self)]"/>
                    <filter string="Draft" name="draft" domain="[('state','=','draft')]"/>
                    <filter string="Active" name="active_prescriptions" domain="[('state','=','active')]"/>
                    <filter string="Expired" name="expired" domain="[('state','=','expired')]"/>
                    <filter string="Inactive" name="inactive_records" domain="[('active','=',False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Patient" name="group_by_patient" context="{'group_by':'patient_id'}"/>
                        <filter string="Doctor" name="group_by_doctor" context="{'group_by':'doctor_id'}"/>
                        <filter string="Status" name="group_by_status" context="{'group_by':'state'}"/>
                        <filter string="Prescription Month" name="group_by_prescription_month" context="{'group_by':'prescription_date:month'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action for Medical Prescriptions -->
        <record id="action_medical_prescription" model="ir.actions.act_window">
            <field name="name">Prescriptions</field>
            <field name="res_model">medical.prescription</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_medical_prescription_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create a new medical prescription.
                </p><p>
                    Manage patient medications, dosages, and instructions.
                    Prescriptions can be linked to consultations.
                </p>
            </field>
        </record>

        <!-- Menu item for Prescriptions under EHR -->
        <menuitem
            id="menu_medical_prescription"
            name="Prescriptions"
            parent="medical_ehr.menu_ehr_root"
            action="action_medical_prescription"
            sequence="20"
            groups="medical_appointment.group_medical_user"/>

    </data>
</odoo>
