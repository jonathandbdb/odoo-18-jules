<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1"> <!-- noupdate="1" means this data is only loaded on module installation -->
        <!-- Demo Medical Specialties -->
        <record id="specialty_cardiology" model="medical.specialty">
            <field name="name">Cardiology</field>
            <field name="description">Deals with disorders of the heart.</field>
        </record>
        <record id="specialty_pediatrics" model="medical.specialty">
            <field name="name">Pediatrics</field>
            <field name="description">Branch of medicine dealing with children and their diseases.</field>
        </record>
        <record id="specialty_neurology" model="medical.specialty">
            <field name="name">Neurology</field>
            <field name="description">Branch of medicine dealing with disorders of the nervous system.</field>
        </record>

        <!-- You can add demo patients and doctors here if needed -->
        <!-- Ensure you set is_patient=True and is_doctor=True respectively -->
    </data>
</odoo>
